{
    "name": "myabakus/teamworkpm",
    "description": "PHP wrapper for Teamwork.com API",
    "homepage": "https://developer.teamwork.com/projects/introduction/welcome-to-the-teamwork-projects-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Loduis Madariaga",
            "email": "loduis@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TeamWorkPm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamWorkPm\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "loduis/illuminate-api": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit":"^9.6.13 || ^10.4.2",
        "psy/psysh": "@stable",
        "symplify/easy-coding-standard": "^12.0",
        "vimeo/psalm": "^5.16",
        "vlucas/phpdotenv": "^2.2"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('./tests/.env.dist', './tests/.env');\""
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/loduis/illuminate-api.git"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev"
}
